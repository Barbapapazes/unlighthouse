{
  "name": "unlighthouse-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "build": "tsup",
    "cli:kintell": "pnpm run build:client && esno packages/unlighthouse/src/providers/cli/index.ts --host https://kintell.com --app-path /home/harlan/sites/kintell.com",
    "cli:ody": "pnpm run build:client && esno packages/unlighthouse/src/providers/cli/index.ts --host https://www.odysseytraveller.com --app-path /home/harlan/sites/odysseytraveller.com-app",
    "cli:mm": "pnpm run build:client && esno packages/unlighthouse/src/providers/cli/index.ts --host https://massivemonster.co --app-path /home/harlan/sites/massivemonster.co",
    "cli:hzw": "pnpm run build:client && esno packages/unlighthouse/src/providers/cli/index.ts --host https://harlanzw.com/",
    "dev": "export DEBUG=* && tsup --watch packages/unlighthouse/src",
    "build:fix": "esno packages/unlighthouse/scripts/postbuild.ts",
    "dev:client": "vite packages/unlighthouse-client",
    "build:client": "vite build packages/unlighthouse-client",
    "lint": "eslint \"packages/**/{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "play": "npm -C playground run dev",
    "play:pokemon": "npm -C packages/unlighthouse/test/fixtures/nuxt-pokemon run dev",
    "prepublishOnly": "npm run build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "esno packages/unlighthouse/src/index.ts",
    "test": "jest",
    "test:update": "jest -u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.10.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "eslint": "^8.2.0",
    "eslint-plugin-jest": "^25.2.4",
    "esno": "^0.12.0",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "ts-jest": "^27.0.7",
    "tsup": "^5.7.0",
    "typescript": "^4.4.4",
    "vite-plugin-windicss": "^1.5.1"
  },
  "dependencies": {
    "sitemapper": "^3.2.0"
  }
}
