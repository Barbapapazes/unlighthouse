{
  "name": "unlighthouse-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cli:docs": "node packages/cli/dist/cli.mjs --root docs --debug --no-cache",
    "cli:hzw": "node packages/cli/dist/cli.mjs --root /home/harlan/sites/harlanzw.com/ --debug",
    "cli:ody": "node packages/cli/dist/cli.mjs --root /home/harlan/sites/odysseytraveller.com-app/ --debug",
    "cli:windi": "esmo packages/unlighthouse/bin/unlighthouse.mjs --site https://windicss.org/",
    "cli:nuxt": "esmo packages/unlighthouse/bin/unlighthouse.mjs --site https://nuxtjs.org/",
    "cli:vue": "node packages/cli/dist/cli.mjs --config-file test/fixtures/staging-vue.config.ts --debug",
    "ci:vue": "node packages/cli/dist/ci.mjs --config-file test/fixtures/staging-vue.config.ts --build-static --debug",
    "ci:docs": "node packages/cli/dist/ci.mjs --root docs --build-static --debug",
    "build": "pnpm -r --parallel --filter ./packages run build",
    "stub": "pnpm -r --parallel --filter ./packages run stub",
    "dev": "pnpm run stub && pnpm run watch:client",
    "dev:client": "pnpm -r --filter ./packages/unlighthouse-client run dev",
    "build:client": "pnpm -r --filter ./packages/unlighthouse-client run build",
    "watch:client": "pnpm -r --filter ./packages/unlighthouse-client run build:watch",
    "lint": "eslint \"packages/**/*.{ts,vue,json,yml}\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "esmo packages/unlighthouse/src/index.ts",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "test": "vitest",
    "test:update": "vitest -u",
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "docs:serve": "npm -C docs run serve"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.0",
    "@types/node": "^17.0.8",
    "@vitest/ui": "^0.1.16",
    "bumpp": "^7.1.1",
    "eslint": "^8.7.0",
    "esno": "^0.14.0",
    "execa": "^6.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.7",
    "jiti": "^1.12.9",
    "rimraf": "^3.0.2",
    "rollup": "^2.64.0",
    "ts-jest": "^27.1.3",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4",
    "vitest": "^0.1.16"
  },
  "version": "0.1.22"
}
