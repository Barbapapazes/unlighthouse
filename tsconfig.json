{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2017",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/**/*",
    "packages/unlighthouse/*.d.ts",
    "packages/nuxt-kit-extras/*.d.ts",
    "node_modules/puppeteer/lib/types.d.ts",
    "node_modules/webpack/types.d.ts",
    "node_modules/@nuxt/kit-edge/dist/index.d.ts",
    "node_modules/@nuxt/schema/dist/index.d.ts",
    "node_modules/@nuxt/schema-edge/dist/index.d.ts"
  ],
  "exclude": [
  ]
}
