{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "unlighthouse": ["./packages/unlighthouse/src/index.ts"],
      "@unlighthouse/core": ["./packages/core/src/index.ts"],
      "@unlighthouse/server": ["./packages/server/src/index.ts"],
      "@unlighthouse/types": ["./packages/types/index.d.ts"],
      "@unlighthouse/vite": ["./packages/vite/src/index.ts"]
    }
  },
  "include": [
    "**/*.d.ts",
  ],
  "exclude": [
    "**/dist/**",
    "**/.lighthouse/**",
    "**/node_modules/**"
  ]
}
